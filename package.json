{
  "name": "@netmex/mcp",
  "version": "1.0.3",
  "type": "module",
  "description": "A lightweight developer-friendly MCP server toolkit with auto-loading tools.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/tool.js",
      "types": "./dist/types/tool.d.ts"
    }
  },
  "bin": {
    "netmex-mcp": "dist/server.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "modelcontext",
    "ai",
    "developer-tools",
    "netmex",
    "server",
    "template"
  ],
  "author": "Danny Verhoeven",
  "license": "MIT",
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "chokidar": "^4.0.3"
  }
}
